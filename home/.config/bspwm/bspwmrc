#! /bin/bash

sh /home/gnkz/.config/polybar/launch.sh
sleep 0.5
pgrep -x sxhkd > /dev/null || sxhkd &
xset led 3
xset r rate 200 50
nmcli radio wifi on
xsetroot -cursor_name left_ptr
numlockx

bspc monitor -d I II III IV

