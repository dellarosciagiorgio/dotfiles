# quit or restart bspwm
alt + shift + {q, r}
	bspc {quit, wm -r}

# make sxhkd reload its configuration files
alt + shift + s
	pkill -USR1 -x sxhkd

# alternate between monocle and tiled
super + z
	bspc desktop -l next

# rotate
super + alt + shift + {Right, Left}
    bspc node @/ -C {forward, backward}
super + ctrl + r
	bspc node @/ --rotate {90, -90}

# focus the node in the given direction
super + shift + {Left, Down, Up, Right}
    bspc node --focus {west, south, north, east}

# change the window state
ctrl + shift + {t, p, f, m}
	bspc node -t {tiled, pseudo_tbiled, floating, fullscreen}

# move a floating window
ctrl + alt + {Left, Down, Up, Right}
	bspc node -v {-20 0, 0 20, 0 -20, 20 0}

# close or kill a window
super + Escape
	bspc node -c
    
# launch basic applications
super + {e, t, q}
	{nautilus, kitty, qalc}

# launch personal applications
super + alt + {c, f, t, s, d}
	{code, firefox, flatpak run org.telegram.desktop, spotify, flatpak run com.discordapp.Discord}

# launch rofi
super + {space, w}
	{rofi -show drun, rofi -show window}
alt + {F4, F12}
	{sh /home/gnkz/.config/rofi/powermenu.sh, sh /home/gnkz/.config/rofi/wallpaper.sh}

# expand a window
super + {Left, Down, Up, Right}
	bspc node -z {left -20 0, bottom 0 20, top 0 -20, right 20 0}

# contract a window
super + ctrl + {Left, Down, Up, Right}
	bspc node -z {right -20 0, top 0 20, bottom 0 -20, left 20 0}

# move a floating window
super + {Left, Down, Up, Right}
	bspc node -v {-20 0, 0 20, 0 -20, 20 0}

# brightness
XF86MonBrightnessDown
	brightnessctl -e -d intel_backlight set '5%-'
XF86MonBrightnessUp
	brightnessctl -e -d intel_backlight set '+5%'

# audio
XF86AudioRaiseVolume
    pactl set-sink-volume 0 +5%
XF86AudioLowerVolume
    pactl set-sink-volume 0 -5%
XF86AudioNext
    playerctl next
XF86AudioPrev
    playerctl previous
XF86AudioPlay
	playerctl play-pause
XF86AudioStop
    playerctl stop