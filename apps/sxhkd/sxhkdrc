# quit or restart bspwm
alt + shift + {q, r}
	bspc {quit, wm -r}

# make sxhkd reload its configuration files
alt + shift + s
	pkill -USR1 -x sxhkd

# show desktop
super + d
    if [ -n "$(bspc query -N -n .hidden)" ]; then flag=off else flag=on; fi && for i in $(bspc query -N); bspc node $i -g hidden=$flag

# alternate between monocle and tiled
super + z
	bspc desktop -l next

# focus the node in the given direction
super + shift + {Left, Down, Up, Right}
    bspc node -{f, s} {west, south, north, east}

# change the window state
ctrl + alt + {t, p, l, f}
	bspc node -t {tiled, pseudo_tiled, floating, fullscreen}

# make a floating window bigger
ctrl + alt + a + {Left, Down, Up, Right}
    STEP=20; SELECTION={1, 2, 3, 4}; \
    bspc node -z $(echo "left -$STEP 0, bottom 0 $STEP, top 0 -$STEP, right $STEP 0" | cut -d',' -f$SELECTION) || \
    bspc node -z $(echo "right -$STEP 0, top 0 $STEP, bottom 0 -$STEP, left $STEP 0" | cut -d',' -f$SELECTION)

# make a floating window smaller
ctrl + alt + s + {Left, Down, Up, Right}
	bspc node -z {right -20 0, top 0 20, bottom 0 -20, left 20 0}

# move floating window
ctrl + alt + {Left, Down, Up, Right}
	bspc node -v {-20 0, 0 20, 0 -20, 20 0}

# close or kill a window
super + Escape
	bspc node -c
    
# launch basic applications
super + {e, t, q}
	{nautilus, kitty, qalc}

# launch personal applications
super + alt + {c, f, t, s, d}
	{code, firefox, flatpak run org.telegram.desktop, spotify, flatpak run com.discordapp.Discord}

# launch rofi
super + {@space, w, del}
	{rofi -show drun, rofi -b window, sh /home/gnkz/.config/rofi/powermenu.sh}

alt + F4
	sh /home/gnkz/.config/rofi/powermenu.sh

# expand a window by moving one of its side outward
super + alt + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}