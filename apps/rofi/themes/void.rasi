* {
    background-color: #050505;
    text-color: #c0c0c0;
    highlight: underline bold #c0c0c0;
    border: 0;
    margin: 2;
    padding: 0;
    spacing: 0;
}

window {
    width: 20%;
    border: 2px;
    border-radius: 5px;
    border-color: #5555aa;
}

message {
    border: 2px;
    border-radius: 5px;
    border-color: #5555aa;
}

listview {
    scrollbar: false;
    lines: 5;
    columns: 1;
    border: 0px;
}

element {
    padding: 1px;
}

element selected {
    background-color: #5555aa;
    border: 1px;
    border-radius: 5px;
}

element-text {
    background-color: inherit;
}